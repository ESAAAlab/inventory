extends ../layout

block body

    div(ng-controller="todosController")
        ul
          li(ng-repeat="todo in todoData")
            input(type="checkbox", ng-click="deleteTodo(todo.id)") 
            | {{todo.title}}

    script(src='//code.jquery.com/jquery-2.1.4.min.js')
    script(src='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/angular.js/1.3.12/angular.min.js')
    script(src='js/app.js')